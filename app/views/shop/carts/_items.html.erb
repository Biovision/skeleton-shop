<ul class="items">
  <% order_items.each do |order_item| %>
  <li>
    <div class="image"><%= image_tag(order_item.item.image.preview.url, alt: order_item.item.name) %></div>
    <div class="details">
      <span class="brand"><%= order_item.item.brand_name %></span>
      <span class="name"><%= order_item.item.name %></span>
    </div>
    <div class="price">
      <div class="value currency"><%= order_item.price %></div>
      <div class="quantity-manager" data-id="<%= order_item.item_id %>">
        <span class="decrement" data-url="<%= shop_cart_item_path(order_item.item, format: :json) %>">&minus;</span>
        <span class="count"><%= order_item.quantity %></span>
        <span class="increment" data-url="<%= shop_cart_items_path(format: :json) %>">&plus;</span>
      </div>
    </div>
  </li>
  <% end %>
</ul>